<p id="notice"><%= notice %></p>

<h1 id="items_requested_title">Items Requested</h1>

<table class = "items_requested_table">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.user_id %></td>
        <td><%= message.user_name %></td>
        <td><%= image_tag message.image, length:"50px", width:"50px" if message.image.attached? %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

